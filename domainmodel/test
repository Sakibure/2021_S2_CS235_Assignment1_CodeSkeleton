class Review:
    def __init__(self, book, review_text, rating):
        self.__book = None
        self.__rating = None
        self.__review_text = "N/A"
        self.__timestamp = datetime.datetime.now()

        if type(book) is Book:
            self.__book = book

        if type(rating) is int:
            if rating >= 1 and rating <= 5:
                self.__rating = rating
            else:
                raise ValueError
        else:
            raise ValueError

        if type(review_text) is str:
            rt = review_text.strip()
            if len(rt) > 0 and rt is not None:
                self.__review_text = rt

    @property
    def book(self):
        return self.__book

    @property
    def review_text(self) -> str:
        return self.__review_text

    @property
    def rating(self) -> int:
        return self.__rating

    @property
    def timestamp(self):
        return self.__timestamp

    def __repr__(self):
        return F"<{self.__book}>"

    def __eq__(self, other):
        if type(other) == type(self):
            if self.__rating == other.rating and self.__review == other.review_text and self.__timestamp == other.timestamp and self.__book == other.book:
                return True
            else:
                return False
        else:
            return False